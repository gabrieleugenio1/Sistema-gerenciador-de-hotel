<section class="escolha gerenciar_hospedagem disable">
    <br>
    <h2 class="escolha__titulo">Gerenciar Hospedagem</h2>
    <table>
        <thead>
            <tr>
                <th>Hospede</th>
                <th>Acomodação</th>
                <th>Entrada</th>
                <th>Previsão de saída</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% for(hospedagem of hospedagens) {%> 
                <tr>
                    <td><%= hospedagem["hospede.nome_completo"] %></td>
                    <td><%= hospedagem["acomodacao.tipo"].charAt(0).toUpperCase() + hospedagem["acomodacao.tipo"].slice(1) + " " + "Número: " + hospedagem["acomodacao.numero"] + " Andar: " + hospedagem["acomodacao.andar"] + "º"%></td>
                    <td><%= hospedagem.entrada %></td>
                    <td><%= hospedagem.previsao_saida%></td>
                    <td><%= hospedagem.status == 1 ? "Ativa" : "Finalizada" %></td>
                    <td><button onclick="abrirModal('vis-modal', '<%=hospedagem.id%>')" id="hospedagem_editar-<%=hospedagem.id%>"><i class="fa-solid fa-gear fa-lg"></i></button> <button id="hospedagem_imprimir-<%=hospedagem.id%>"><i class="fa-solid fa-print fa-lg"></i></button></td>
                </tr>                 
            <% }%>
            
        </tbody>
    </table>
    <br>
</section>